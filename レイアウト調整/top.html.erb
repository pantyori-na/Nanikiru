<p id="notice"><%= notice %></p>

<h1>TOP</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Type</th>
      <th>Image</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_images.each do |post_image| %>
    <tr>
      <td><%= post_image.user_id %></td>
      <td><%= post_image.image_type_i18n %></td>
      <td>
        <%= attachment_image_tag post_image, :image, :fill, 200, 200, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
      </td>
      <td><%= post_image.comment %></td>
      <td><%= link_to 'Show', post_image %></td>
      <td><%= link_to 'Edit', edit_post_image_path(post_image) %></td>
      <td><%= link_to 'Destroy', post_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

