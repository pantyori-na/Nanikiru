<!-- タブ・メニュー -->
<div class="nav-back">
  <ul class="nav nav-tabs center">
    <li class="active"><a href="#index" data-toggle="tab">Nanikiru一覧</a></li>
    <li><a href="#index-4p" data-toggle="tab">4人麻雀Nanikiru</a></li>
    <li><a href="#index-3p" data-toggle="tab">3人麻雀Nanikiru</a></li>
    <li><a href="#index-others" data-toggle="tab">その他のNanikiru</a></li>
  </ul>
</div>
<div class="container-fluid">
  <!-- タブ内容 -->
  <div class="tab-content">
    <!-- 新着順全て -->
    <div class="tab-pane fade in active" id="index">
      <div class="container-fluid">
        <% @post_images.each do |post_image| %>
        <%= attachment_image_tag post_image, :image, :fill, 400, 400, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
        <% end %>
      </div>
      <div class="fixed">
        <%= paginate @post_images, class: "paginate" %>
      </div>
    </div>
    <!-- 4人麻雀 -->
    <div class="tab-pane fade in" id="index-4p">
      <div class="container-fluid">
        <% @post_4p_images.each do |post_image| %>
        <%= attachment_image_tag post_image, :image, :fill, 400, 400, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
        <% end %>
        <div class="fixed">
          <%= paginate @post_4p_images, class: "paginate" %>
        </div>
      </div>
    </div>
    <!-- 3人麻雀 -->
    <div class="tab-pane fade in" id="index-3p">
      <div class="container-fluid">
        <% @post_3p_images.each do |post_image| %>
        <%= attachment_image_tag post_image, :image, :fill, 400, 400, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
        <% end %>
        <div class="fixed">
          <%= paginate @post_3p_images, class: "paginate" %>
        </div>
      </div>
    </div>
    <!-- その他 -->
    <div class="tab-pane fade in" id="index-others">
      <div class="container-fluid">
        <% @post_other_images.each do |post_image| %>
        <%= attachment_image_tag post_image, :image, :fill, 400, 400, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
        <% end %>
        <div class="fixed">
          <%= paginate @post_other_images, class: "paginate" %>
        </div>
      </div>
    </div>
  </div>
</div>
