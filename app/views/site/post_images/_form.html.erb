<%= form_with model: @post_image,local: true do |form| %>

<label for="">Name</label>
<%= current_user.name %>

<div class="field">
  <label for="">Game type</label>
  <%= form.select :image_type, PostImage.image_types_i18n.keys.map { |k| [PostImage.image_types_i18n[k], k]} %>
</div>

<div class="field">
  <label for="">画像投稿</label>
  <div>
    <%= form.attachment_field :image %>
  </div>
</div>

<!-- cocoonによる選択肢追加 -->
<div class="selections">
  <%= form.fields_for :selections do |f| %>
  <%= render "selection_fields", f: f %>
  <% end %>
  <div class="links">
    <%= link_to_add_association "選択肢追加", form, :selections %>
  </div>
</div>

<div class="field">
  <%= form.label :comment %>
  <%= form.text_area :comment %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
