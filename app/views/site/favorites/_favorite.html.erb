<%#binding.pry%>
<% if current_user.favorited_by?(post_image) %>
<%= link_to post_image_unlike_path post_image_id: post_image.id do %>
<i class="fas fa-heart fa-2x" aria-hidden="true" style="color: red;"></i>
<span class="text-fav"><%= post_image.favorites.count %> いいね</span>
<% end %>
<% else %>
<%=  link_to post_image_like_path post_image_id: post_image.id do %>
<i class="far fa-heart fa-2x" aria-hidden="true" style="color: red;"></i>
<span class="text-fav"><%= post_image.favorites.count %> いいね</span>
<% end %>
<% end %>
