<div class="profile-container">
  <p id="notice"><%= notice %></p>
  <%= flash[:success] %>
  <%= flash.now[:alert] %>
  <%= render 'layouts/flash_messages' %>
  <div class="container">
    <div class="row">
      <div class="row col-lg-4">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
        <!-- follow機能 -->
        <div>
          <%= render 'site/relationships/follow_button', user: @user %>
        </div>

        <div>
          <!-- 通報機能 -->
          <%= form_for [@user, @report] do |f| %>
          <label for="">Report type</label>
          <%= f.select :report_type, Report.report_types_i18n.keys.map { |k| [Report.report_types_i18n[k], k]} %>
          <%= f.text_field :comment, placeholder: "コメントをここに" %>
          <%= f.submit "通報する",data: { confirm: 'このユーザーを通報しますか？' }, class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        </div>
      </div>
      <% end %>
      <div class="row col-lg-8">
        <div class="row">
          <label for="">User name</label>
          <h3 class="profile-name"><%= @user.name %></h3>
        </div>
        <div class="row">
          <label for="">Introduction</label>
          <%= @user.introduction %>
        </div>
        <div class="row">
          <label>現在の４人麻雀実力[天鳳相当]</label>
          <%= @user.dan_4p_proper_i18n %>
        </div>
        <div class="row">
          <label>現在の３人麻雀実力[天鳳相当]</label>
          <%= @user.dan_3p_proper_i18n %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <h2>GAME RECORD</h2>
  <% @user.game_records.each do|game_record| %>
  <div class="row">
    _________________________________
    <div class="row">
      <label>Mahjong game type:</label>
      <%= game_record.game_type_i18n %>
    </div>
    <div class="row">
      <label>Game:</label>
      <%= game_record.game_name_i18n %>
    </div>
    <div class="row">
      <label>Handle name for game :</label>
      <%= game_record.handle_name %>
    </div>
    <div class="row">
      <label>Game strength: </label>
      <%= game_record.ability_i18n %>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-left" %></p>
  <% end %>
</div>
