<div class="container-fluid">
  <div class="col-lg-6 col-sm-12 col-lg-offset-3">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <label for="mail">メールアドレス</label><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", placeholder:"メールアドレス",id:"mail" %>
    </div>

    <div class="form-group">
      <label for="pass">パスワード</label>
      <% if @minimum_password_length %>
      <em>(６文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "current-passwor" ,class:"form-control", placeholder:"パスワード",id:"pass" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

    <%= link_to 'Twitterログイン', user_twitter_omniauth_authorize_path %>

    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-primary btn-lg btn-block btn-base-1 mt-20" %>
    </div>
    <% end %>

    <%= render "site/users/shared/links" %>

  </div>

</div>
